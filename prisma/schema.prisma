generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  name       String
  phone      String
  email      String       @unique
  password   String
  status     UserStatus   @default(Pending)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  userverify UserVerify[]
}

model UserVerify {
  id           Int        @id @default(autoincrement())
  gender       UserGender
  address      String
  dob          DateTime
  id_type      String
  id_no        String
  front_id_url String
  back_id_url  String
  country      String
  city         String
  postal_code  Int
  user_id      Int
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  user         User       @relation(fields: [user_id], references: [id])
}

enum UserStatus {
  Pending
  UnderVerified
  Verified
}

enum UserGender {
  Male
  Female
  Other
}
